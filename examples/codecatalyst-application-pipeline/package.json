{
  "name": "fruit-api",
  "scripts": {
    "build": "npx cdk synth -q",
    "lint": "npx eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern infrastructure/src infrastructure/test build-tools .projenrc.js",
    "test": "npx jest --passWithNoTests --all",
    "test:update": "npx jest --passWithNoTests --all --updateSnapshot",
    "update": "ncu -u -x '@aws-cdk/aws-synthetics-alpha' && npm install && npm run test:update"
  },
  "devDependencies": {
    "@types/jest": "^29.5",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "aws-cdk": "^2.84.0",
    "cdk-nag": "^2.27.39",
    "esbuild": "^0.18.3",
    "eslint": "^8.42.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5",
    "jest-junit": "^16",
    "json-schema": "^0.4.0",
    "npm-check-updates": "^16.10.12",
    "projen": "^0.71.97",
    "ts-jest": "^29.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.353.0",
    "@aws-sdk/client-codedeploy": "^3.353.0",
    "@aws-sdk/client-codeguru-reviewer": "^3.353.0",
    "@aws-sdk/client-codepipeline": "^3.353.0",
    "@aws-sdk/client-ecr": "^3.353.0",
    "@aws-sdk/client-iam": "^3.353.0",
    "@aws-sdk/client-s3": "^3.353.0",
    "@aws-sdk/client-sts": "^3.353.0",
    "@aws-sdk/credential-providers": "^3.353.0",
    "@aws-sdk/shared-ini-file-loader": "^3.347.0",
    "@cdklabs/cdk-ecs-codedeploy": "^0.0.191",
    "@aws-cdk/aws-synthetics-alpha": "2.71.0-alpha.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/prompts": "^2.4.4",
    "aws-cdk-lib": "^2.84.0",
    "constructs": "^10.2.52",
    "prompts": "^2.4.2",
    "yaml": "^2.3.1"
  },
  "license": "Apache-2.0",
  "version": "0.0.0",
  "jest": {
    "testMatch": [
      "<rootDir>/infrastructure/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(infrastructure/test|infrastructure/src)/**/*(*.)@(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.dev.json"
      }
    }
  }
}
