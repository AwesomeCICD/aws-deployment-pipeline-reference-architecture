{
  "name": "fruit-api",
  "scripts": {
    "build": "npx cdk synth -q",
    "lint": "npx eslint --ext .ts,.tsx --no-error-on-unmatched-pattern infrastructure/src infrastructure/test build-tools .projenrc.js",
    "lint:fix": "npx eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern infrastructure/src infrastructure/test build-tools .projenrc.js",
    "test": "npx jest --passWithNoTests --all",
    "test:update": "npx jest --passWithNoTests --all --updateSnapshot",
    "update": "npx --yes npm-check-updates -u -t semver && npm install && npm run test:update",
    "license-check": "npx license-checker --onlyAllow 'MIT;ISC;Apache-2.0;BSD-2-Clause;BSD-3-Clause;Python-2.0;Unlicense;CC0-1.0;CC-BY-3.0;CC-BY-4.0;BlueOak-1.0.0;0BSD'"
  },
  "devDependencies": {
    "@types/jest": "^29.5",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "aws-cdk": "^2.149.0",
    "cdk-nag": "^2.28.161",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7",
    "jest-junit": "^16",
    "json-schema": "^0.4.0",
    "license-checker": "^25.0.1",
    "npm-check-updates": "^16.14.20",
    "projen": "^0.80.20",
    "ts-jest": "^29.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.614.0",
    "@aws-sdk/client-codedeploy": "^3.614.0",
    "@aws-sdk/client-codeguru-reviewer": "^3.614.0",
    "@aws-sdk/client-codepipeline": "^3.614.0",
    "@aws-sdk/client-ecr": "^3.614.0",
    "@aws-sdk/client-iam": "^3.614.0",
    "@aws-sdk/client-s3": "^3.614.0",
    "@aws-sdk/client-sts": "^3.614.0",
    "@aws-sdk/credential-providers": "^3.614.0",
    "@aws-sdk/shared-ini-file-loader": "^3.374.0",
    "@cdklabs/cdk-ecs-codedeploy": "^0.0.267",
    "@types/aws-lambda": "^8.10.141",
    "@types/prompts": "^2.4.9",
    "aws-cdk-lib": "^2.149.0",
    "constructs": "^10.3.0",
    "prompts": "^2.4.2",
    "yaml": "^2.4.5"
  },
  "license": "Apache-2.0",
  "version": "0.0.0",
  "jest": {
    "testMatch": [
      "<rootDir>/infrastructure/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(infrastructure/test|infrastructure/src)/**/*(*.)@(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.dev.json"
      }
    }
  }
}
